<h3>Comments & Suggestions</h3>
{{#each ideas}}
<div class="card card-body">
    <h4> {{title}} </h4>
    <p> {{details}} </p>
    
    <a class="btn btn-dark btn-block mb-2" style="width: 100px; height:35" href="ideas/edit/{{id}}">Edit</a>
    
    <form method="post" action ="/ideas/{{id}}?_method=DELETE"> </a>
      <input type="hidden" name="+method" value="DELETE">
      <input type="submit" class="btn btn-danger btn-block" style="width: 100px; height:35px"value="delete">
      </form>
    
</div>
{{else}}
<p> NULL</p>
{{/each}}


